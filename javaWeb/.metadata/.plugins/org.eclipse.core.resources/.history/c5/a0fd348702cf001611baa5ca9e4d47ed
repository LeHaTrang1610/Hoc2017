	public ModelAndView helloWorld() {
 
	/*	String message = "Hello this is welcome page";
		return new ModelAndView("welcome", "message", message);*/
		
		String message = "Le Ha Trang";
		return new ModelAndView("Trang", "message", message);
	}
}
